<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

    <!-- main layout -->
    <definition name="layouts-tiles_main" template="/WEB-INF/tiles/layout/main/layouts.jsp">
        <put-attribute name="header" value="/WEB-INF/tiles/layout/main/pages/header.jsp"/>
        <put-attribute name="top" value="/WEB-INF/tiles/layout/main/pages/top.jsp"/>
        <put-attribute name="left" value="/WEB-INF/tiles/layout/main/pages/left.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/tiles/layout/main/pages/footer.jsp"/>
        <put-attribute name="module" value="/WEB-INF/tiles/layout/main/pages/module.jsp"/>
        <put-attribute name="bottom" value="/WEB-INF/tiles/layout/main/pages/bottom.jsp"/>
        <put-attribute name="content"/>
    </definition>

    <definition name="*.main" extends="layouts-tiles_main">
        <put-attribute name="content" value="/WEB-INF/view/{1}/content.jsp"/>
    </definition>
    <definition name="*/*.main" extends="layouts-tiles_main">
        <put-attribute name="content" value="/WEB-INF/view/{1}/{2}/content.jsp"/>
    </definition>
    <definition name="*/*/*.main" extends="layouts-tiles_main">
        <put-attribute name="content" value="/WEB-INF/view/{1}/{2}/{3}/content.jsp"/>
    </definition>

    <!-- single-page layout -->
    <definition name="layouts-tiles_single-page" template="/WEB-INF/tiles/layout/single-page/layouts.jsp">
        <put-attribute name="header" value="/WEB-INF/tiles/layout/single-page/pages/header.jsp"/>
        <put-attribute name="top" value="/WEB-INF/tiles/layout/single-page/pages/top.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/tiles/layout/single-page/pages/footer.jsp"/>
        <put-attribute name="module" value="/WEB-INF/tiles/layout/single-page/pages/module.jsp"/>
        <put-attribute name="bottom" value="/WEB-INF/tiles/layout/single-page/pages/bottom.jsp"/>
        <put-attribute name="content"/>
    </definition>

    <definition name="*.single-page" extends="layouts-tiles_single-page">
        <put-attribute name="content" value="/WEB-INF/view/{1}/content.jsp"/>
    </definition>
    <definition name="*/*.single-page" extends="layouts-tiles_single-page">
        <put-attribute name="content" value="/WEB-INF/view/{1}/{2}/content.jsp"/>
    </definition>
    <definition name="*/*/*.single-page" extends="layouts-tiles_single-page">
        <put-attribute name="content" value="/WEB-INF/view/{1}/{2}/{3}/content.jsp"/>
    </definition>

</tiles-definitions>